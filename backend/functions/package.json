{
  "name": "functions",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint --parser-options=project:tsconfig.json \"src/**/*\"",
    "prebuild": "rimraf lib",
    "build": "tsc --project tsconfig.build.json",
    "serve": "npm run build && firebase serve --host 0.0.0.0 --port 5061",
    "serve:watch": "tsc --project tsconfig.build.json --watch | firebase serve --host 0.0.0.0 --port 5061",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only hosting,firestore,functions:api",
    "logs": "firebase functions:log",
    "_test": "jest --passWithNoTests --runInBand --forceExit",
    "test": "firebase emulators:exec --only firestore \"npm run _test\"",
    "test:unit": "firebase emulators:exec --only firestore \"npm run _test -- --watch --config jest.unit-config.js\"",
    "test:e2e": "firebase emulators:exec --only firestore \"npm run _test -- --watch --config jest.e2e-config.js\"",
    "test:staged": "npm run _test -- --findRelatedTests",
    "test:cov": "firebase emulators:exec --only firestore \"npm run _test -- --coverage --silent\""
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.21.0",
    "celebrate": "^13.0.4",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "deep-object-diff": "^1.1.0",
    "deliverful-types": "git+ssh://git@github.com/deliverful/deliverful-types.git#develop",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^8.0.2",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.13.1",
    "ramda": "^0.27.1",
    "ulid": "^2.3.0",
    "unique-names-generator": "^4.3.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.1.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/ramda": "^0.27.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "faker": "^5.1.0",
    "firebase-functions-test": "^0.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "mockdate": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
